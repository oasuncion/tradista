<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane hgap="10.0" maxHeight="-Infinity"
	maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
	styleClass="root" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.60"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="finance.tradista.core.marketdata.ui.controller.ZeroCouponCurvesController">
	<columnConstraints>
		<ColumnConstraints />
		<ColumnConstraints />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints vgrow="SOMETIMES" />
		<RowConstraints vgrow="SOMETIMES" />
		<RowConstraints vgrow="SOMETIMES" />
	</rowConstraints>
	<children>
		<HBox alignment="CENTER_LEFT" maxHeight="-Infinity"
			maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
			GridPane.halignment="LEFT">
			<children>
				<Label styleClass="labelBold" text="Zero Coupon Curves">
					<HBox.margin>
						<Insets right="10.0" />
					</HBox.margin>
				</Label>
			</children>
			<opaqueInsets>
				<Insets />
			</opaqueInsets>
		</HBox>
		<HBox alignment="CENTER_RIGHT" maxHeight="-Infinity"
			maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
			GridPane.columnIndex="1" GridPane.halignment="RIGHT"
			GridPane.hgrow="ALWAYS">
			<children>
				<Button alignment="CENTER_RIGHT" mnemonicParsing="false"
					onAction="#refresh" text="Refresh">
					<HBox.margin>
						<Insets right="10.0" />
					</HBox.margin>
				</Button>
			</children>
		</HBox>
		<Label fx:id="marketDataMessage" visible="false"
			prefHeight="175" prefWidth="700" maxHeight="-Infinity"
			maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
			GridPane.rowIndex="1" GridPane.columnSpan="2">
			<VBox.margin>
				<Insets bottom="10.0" />
			</VBox.margin>
		</Label>
		<TabPane tabClosingPolicy="UNAVAILABLE"
			GridPane.columnSpan="2" GridPane.rowIndex="2">
			<tabs>
				<Tab text="Definition">
					<content>
						<GridPane hgap="10.0" maxHeight="-Infinity"
							maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
							vgap="10.0">
							<columnConstraints>
								<ColumnConstraints hgrow="SOMETIMES" />
								<ColumnConstraints hgrow="SOMETIMES" />
								<ColumnConstraints hgrow="SOMETIMES" />
								<ColumnConstraints hgrow="SOMETIMES" />
								<ColumnConstraints hgrow="SOMETIMES" />
								<ColumnConstraints hgrow="SOMETIMES" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints vgrow="SOMETIMES" />
								<RowConstraints vgrow="SOMETIMES" />
								<RowConstraints vgrow="SOMETIMES" />
								<RowConstraints vgrow="SOMETIMES" />
							</rowConstraints>
							<children>
								<Label text="Curve name" />
								<ComboBox fx:id="curveComboBox"
									GridPane.columnIndex="1">
									<items>
										<FXCollections fx:factory="observableArrayList" />
									</items>
								</ComboBox>
								<Button fx:id="deleteButton" mnemonicParsing="false"
									onAction="#delete" text="Delete" GridPane.columnIndex="2" />
								<CheckBox fx:id="isGeneratedCheckBox"
									mnemonicParsing="false" text="Is generated from Quotes"
									GridPane.rowIndex="1" />
								<Label text="Generation Algorithm :" GridPane.rowIndex="2" />
								<ComboBox fx:id="algorithmComboBox"
									GridPane.columnIndex="1" GridPane.rowIndex="2" />
								<Label text="Interpolator :" GridPane.columnIndex="2"
									GridPane.rowIndex="2" />
								<ComboBox fx:id="interpolatorComboBox"
									GridPane.columnIndex="3" GridPane.rowIndex="2" />
								<Label text="Instance :" GridPane.columnIndex="4"
									GridPane.rowIndex="2" />
								<ComboBox fx:id="instanceComboBox"
									GridPane.columnIndex="5" GridPane.rowIndex="2" />
							</children>
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
						</GridPane>
					</content>
				</Tab>
				<Tab text="Quotes">
					<content>
						<GridPane hgap="10.0" maxHeight="-Infinity"
							maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
							vgap="10.0">
							<columnConstraints>
								<ColumnConstraints hgrow="SOMETIMES" />
								<ColumnConstraints hgrow="SOMETIMES" />
								<ColumnConstraints hgrow="SOMETIMES" />
								<ColumnConstraints hgrow="SOMETIMES" />
								<ColumnConstraints hgrow="SOMETIMES" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints vgrow="SOMETIMES" />
								<RowConstraints vgrow="SOMETIMES" />
								<RowConstraints vgrow="SOMETIMES" />
								<RowConstraints minHeight="10.0"
									prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints vgrow="SOMETIMES" />
							</rowConstraints>
							<children>
								<Label text="Quote set :" />
								<ComboBox fx:id="quoteSet" GridPane.columnIndex="1" />
								<Label text="Quote name :" GridPane.rowIndex="1" />
								<TextField fx:id="quoteNameTextField"
									GridPane.columnIndex="1" GridPane.rowIndex="1" />
								<Label text="Quote Date :" GridPane.columnIndex="3"
									GridPane.rowIndex="1" />
								<DatePicker fx:id="quoteDate"
									GridPane.columnIndex="4" GridPane.rowIndex="1" />
								<Button fx:id="searchButton" mnemonicParsing="false"
									onAction="#search" text="Search" GridPane.columnIndex="1"
									GridPane.rowIndex="2" />
								<VBox maxHeight="-Infinity" maxWidth="-Infinity"
									minHeight="-Infinity" minWidth="-Infinity"
									GridPane.columnIndex="2" GridPane.rowIndex="4">
									<children>
										<Button fx:id="excludeButton" mnemonicParsing="false"
											onAction="#exclude" text="&lt;&lt;">
											<VBox.margin>
												<Insets bottom="10.0" />
											</VBox.margin>
										</Button>
										<Button fx:id="includeButton" mnemonicParsing="false"
											onAction="#include" text="&gt;&gt;" />
									</children>
								</VBox>
								<Label text="Selected Quotes" GridPane.columnIndex="3"
									GridPane.rowIndex="3" GridPane.valignment="BOTTOM" />
								<Label text="Quotes" GridPane.rowIndex="3"
									GridPane.valignment="BOTTOM" />
								<ListView fx:id="quotesList" GridPane.columnSpan="2"
									GridPane.rowIndex="4" />
								<ListView fx:id="selectedQuotesList"
									GridPane.columnIndex="3" GridPane.rowIndex="4" />
							</children>
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
						</GridPane>
					</content>
				</Tab>
				<Tab text="Points">
					<content>
						<GridPane hgap="10.0" maxHeight="-Infinity"
							maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
							vgap="10.0">
							<columnConstraints>
								<ColumnConstraints hgrow="SOMETIMES" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints vgrow="SOMETIMES" />
							</rowConstraints>
							<children>
								<TableView fx:id="pointsTable" editable="true"
									maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
									tableMenuButtonVisible="false">
									<columns>
										<TableColumn fx:id="pointDate" />
										<TableColumn fx:id="pointRate" editable="true" />
									</columns>
								</TableView>
							</children>
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
						</GridPane>
					</content>
				</Tab>
				<Tab text="Chart">
					<content>
						<GridPane hgap="10.0" maxHeight="-Infinity"
							maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
							vgap="10.0">
							<columnConstraints>
								<ColumnConstraints hgrow="SOMETIMES" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints vgrow="SOMETIMES" />
							</rowConstraints>
							<children>
								<LineChart fx:id="pointsChart">
									<xAxis>
										<NumberAxis side="BOTTOM" />
									</xAxis>
									<yAxis>
										<NumberAxis side="LEFT" />
									</yAxis>
								</LineChart>
							</children>
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
						</GridPane>
					</content>
				</Tab>
			</tabs>
		</TabPane>
		<HBox maxHeight="-Infinity" maxWidth="-Infinity"
			minHeight="-Infinity" minWidth="-Infinity" GridPane.columnSpan="2"
			GridPane.rowIndex="3">
			<children>
				<Button fx:id="saveButton" mnemonicParsing="false"
					onAction="#save" text="Save">
					<HBox.margin>
						<Insets right="10.0" />
					</HBox.margin>
				</Button>
				<Button fx:id="copyButton" mnemonicParsing="false"
					onAction="#copy" text="Copy">
					<HBox.margin>
						<Insets right="10.0" />
					</HBox.margin>
				</Button>
				<Button fx:id="generateButton" mnemonicParsing="false"
					onAction="#generate" text="Generate">
					<HBox.margin>
						<Insets right="10.0" />
					</HBox.margin>
				</Button>
				<Button fx:id="createButton" mnemonicParsing="false"
					onAction="#create" text="Create a new curve">
					<HBox.margin>
						<Insets right="10.0" />
					</HBox.margin>
				</Button>
			</children>
			<opaqueInsets>
				<Insets />
			</opaqueInsets>
		</HBox>
	</children>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</GridPane>