<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/ejb-jar_3_2.xsd" version="3.2">
  <module-name>security-ejb</module-name>
  <display-name>security-ejb</display-name>
  <enterprise-beans>
    <session>
      <ejb-name>BondTradeServiceBean</ejb-name>
      <ejb-class>
		finance.tradista.security.bond.service.BondTradeServiceBean
		</ejb-class>
      <session-type>Stateless</session-type>
      <resource-ref>
        <res-ref-name>ConnectionFactory</res-ref-name>
        <injection-target>
          <injection-target-class>finance.tradista.security.bond.service.BondTradeServiceBean</injection-target-class>
          <injection-target-name>factory</injection-target-name>
        </injection-target>
        <lookup-name>
		 java:/ConnectionFactory
		 </lookup-name>
      </resource-ref>
      <resource-ref>
        <res-ref-name>TransferQueue</res-ref-name>
        <injection-target>
          <injection-target-class>finance.tradista.security.bond.service.BondTradeServiceBean</injection-target-class>
          <injection-target-name>destination</injection-target-name>
        </injection-target>
        <lookup-name>
		 java:/jms/queue/TransferQueue
		 </lookup-name>
      </resource-ref>
    </session>
    <session>
      <ejb-name>EquityTradeServiceBean</ejb-name>
      <ejb-class>
		finance.tradista.security.equity.service.EquityTradeServiceBean
		</ejb-class>
      <session-type>Stateless</session-type>
      <resource-ref>
        <res-ref-name>ConnectionFactory</res-ref-name>
