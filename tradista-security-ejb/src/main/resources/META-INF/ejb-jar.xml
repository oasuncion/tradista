        </injection-target>
        <lookup-name>
		 java:/ConnectionFactory
		 </lookup-name>
      </resource-ref>
      <resource-ref>
        <res-ref-name>TransferQueue</res-ref-name>
        <injection-target>
          <injection-target-class>finance.tradista.security.equityoption.service.EquityOptionTradeServiceBean</injection-target-class>
          <injection-target-name>destination</injection-target-name>
        </injection-target>
        <lookup-name>
		 java:/jms/queue/TransferQueue
		 </lookup-name>
      </resource-ref>
    </session>
  </enterprise-beans>
</ejb-jar>