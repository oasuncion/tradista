          <injection-target-class>finance.tradista.security.equity.service.EquityTradeServiceBean</injection-target-class>
          <injection-target-name>factory</injection-target-name>
        </injection-target>
        <lookup-name>
		 java:/ConnectionFactory
		 </lookup-name>
      </resource-ref>
      <resource-ref>
        <res-ref-name>TransferQueue</res-ref-name>
        <injection-target>
          <injection-target-class>finance.tradista.security.equity.service.EquityTradeServiceBean</injection-target-class>
          <injection-target-name>destination</injection-target-name>
        </injection-target>
        <lookup-name>
		 java:/jms/queue/TransferQueue
		 </lookup-name>
      </resource-ref>
    </session>
    <session>
      <ejb-name>EquityOptionTradeServiceBean</ejb-name>
      <ejb-class>
		finance.tradista.security.equityoption.service.EquityOptionTradeServiceBean
		</ejb-class>
      <session-type>Stateless</session-type>
      <resource-ref>
        <res-ref-name>ConnectionFactory</res-ref-name>
